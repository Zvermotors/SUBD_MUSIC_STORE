<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.musicstore.controllers.AuthController"
      spacing="20" style="-fx-padding: 40; -fx-background-color: #f5f5f5;"
      alignment="CENTER" prefWidth="600" prefHeight="500">

    <Label text="Music Store" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <VBox spacing="15" style="-fx-padding: 25; -fx-background-color: white; -fx-background-radius: 10;"
          alignment="CENTER" prefWidth="500">
        <Label text="Авторизация" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

        <VBox spacing="5" prefWidth="450">
            <Label text="Email:"/>
            <TextField fx:id="emailField" promptText="Введите email" prefWidth="450"/>
            <Label fx:id="emailError" style="-fx-text-fill: red;" visible="false"/>
        </VBox>

        <VBox spacing="5" prefWidth="450">
            <Label text="Пароль:"/>
            <PasswordField fx:id="passwordField" promptText="Введите пароль" prefWidth="450"/>
            <Label fx:id="passwordError" style="-fx-text-fill: red;" visible="false"/>
        </VBox>

        <Label fx:id="loginError" style="-fx-text-fill: red;" visible="false"/>

        <Button text="Войти" onAction="#handleLogin"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="250" prefHeight="35"/>

        <Button text="Регистрация" onAction="#handleRegister"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"
                prefWidth="250" prefHeight="35"/>
    </VBox>
</VBox>